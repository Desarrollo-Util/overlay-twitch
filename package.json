{
	"name": "twitch-alert-bot",
	"version": "0.0.1",
	"description": "",
	"main": "dist/index.js",
	"scripts": {
		"dev-back": "npm run copy:phrases && cd node-back && tsc-watch --onSuccess \"node -r ./tsconfig-paths-bootstrap.js ../dist/index.js\"",
		"dev-front": "cd react-front && vite --host",
		"build-back": "npm run clean:dist && npm run copy:phrases && cd node-back && tsc",
		"build-front": "npm run clean:public && cd react-front && tsc && vite build",
		"start-back": "cd node-back && node -r ./tsconfig-paths-bootstrap.js ../dist/index.js",
		"start-front": "cd react-front && vite preview --port 3101",
		"copy:phrases": "cd node-back && cpy \"./src/resources/frases.json\" \"../dist/resources/\"",
		"clean:dist": "rimraf dist",
		"clean:public": "rimraf public",
		"format": "prettier --write ."
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
